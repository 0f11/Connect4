@page
@model WebApp.Pages.GameStart
@{
    Layout = "Shared/_Layout";
}
@{
    ViewData["Title"] = "Start a new game";
}

<h1>Start a game</h1>

<hr/>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-form="newgame">
            <div class="form-group">
                <label asp-for="GameSettings.BoardHeight" class="control-label"></label>
                <input asp-for="GameSettings.BoardHeight" class="form-control"/>
                <span asp-validation-for="GameSettings.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameSettings.BoardWidth" class="control-label"></label>
                <input asp-for="GameSettings.BoardWidth" class="form-control"/>
                <span asp-validation-for="GameSettings.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameSettings.PlayerName" class="control-label"></label>
                <input asp-for="GameSettings.PlayerName" class="form-control"/>
                <span asp-validation-for="GameSettings.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="GameSettings.AgainstAi" /> @Html.DisplayNameFor(model => model.GameSettings.AgainstAi)
                    </label>
                </div>
            </div>
            <div class="form-group">
            <input type="submit" asp-for="GameSettings" value="Start Game" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
